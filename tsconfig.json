{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "strict": true,
    "allowJs": true,
    "rootDir": "./",
    "baseUrl": "src",
    "outDir": "dist",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "app/*": ["app/*"],
      "i18n/*": ["i18n/*"],
      "store/*": ["store/*"],
      "utils/*": ["utils/*"],
      "hooks/*": ["hooks/*"],
      "pages/*": ["pages/*"],
      "assets/*": ["assets/*"],
      "themes/*": ["themes/*"],
      "layouts/*": ["layouts/*"],
      "settings/*": ["settings/*"],
      "services/*": ["services/*"],
      "fragments/*": ["fragments/*"],
      "components/*": ["components/*"],
      "decorators/*": ["decorators/*"]
    },
    "types": [
      "date-fns",
      "enzyme",
      "enzyme-adapter-react-16",
      "i18next",
      "jest",
      "nanoid",
      "node",
      "react",
      "react-dom",
      "react-hot-loader",
      "react-maskedinput",
      "react-router-dom",
      "react-test-renderer",
      "styled-components",
      "webpack",
      "webpack-env"
    ],
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.tsx",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "./dist",
    "./configs",
    "./node_modules",
    "**/node_modules/*",
    "./src/**/*.test.tsx",
    "./src/**/*.spec.tsx"
  ]
}
