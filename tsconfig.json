{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "strict": true,
    "allowJs": true,
    "rootDir": "./",
    "baseUrl": "src",
    "outDir": "dist",
    "lib": ["es6", "es7", "dom"],
    "paths": {
      "*": ["./*"],
      "app/*": ["app/*"],
      "i18n/*": ["i18n/*"],
      "store/*": ["store/*"],
      "utils/*": ["utils/*"],
      "hooks/*": ["hooks/*"],
      "theme/*": ["theme/*"],
      "pages/*": ["pages/*"],
      "assets/*": ["assets/*"],
      "layouts/*": ["layouts/*"],
      "settings/*": ["settings/*"],
      "services/*": ["services/*"],
      "fragments/*": ["fragments/*"],
      "components/*": ["components/*"],
      "decorators/*": ["decorators/*"]
    },
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.tsx",
    "typings/**/*.d.ts"
  ],
  "exclude": ["./node_modules", "./configs", "./dist", "**/node_modules/*", "./src/**/*.test.tsx", "./src/**/*.spec.tsx"]
}
