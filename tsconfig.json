{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "importHelpers": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "outDir": "dist",
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "pretty": true,
    "preserveConstEnums": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "date-fns",
      "enzyme",
      "enzyme-adapter-react-16",
      "i18next",
      "jest",
      "nanoid",
      "node",
      "react",
      "react-dom",
      "react-hot-loader",
      "react-maskedinput",
      "react-router-dom",
      "react-test-renderer",
      "styled-components",
      "webpack",
      "webpack-env"
    ],
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "configs",
    "node_modules",
    "**/node_modules/*",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx"
  ],
  "extends": "./tsconfig.paths.json"
}
