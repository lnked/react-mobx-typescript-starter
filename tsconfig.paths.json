{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "src",
    "outDir": "dist",
    "paths": {
      "@app/*": ["app/*"],
      "@i18n/*": ["i18n/*"],
      "@store/*": ["store/*"],
      "@stores/*": ["stores/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"],
      "@pages/*": ["pages/*"],
      "@assets/*": ["assets/*"],
      "@themes/*": ["themes/*"],
      "@modules/*": ["modules/*"],
      "@layouts/*": ["layouts/*"],
      "@settings/*": ["settings/*"],
      "@services/*": ["services/*"],
      "@fragments/*": ["fragments/*"],
      "@components/*": ["components/*"],
      "@decorators/*": ["decorators/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ]
  },
  "exclude": [
    "dist",
    "configs/*",
    "node_modules",
    "**/node_modules/*",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "typings/**/*.d.ts"
  ]
}
